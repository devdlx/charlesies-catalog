{
  "rules": {
    ".read": false,
    ".write": false,

    "users": {
      "$user_id": {
        ".read": "auth.uid === $user_id",
        ".write": "auth.uid === $user_id",
        "created": {
          ".validate": "newData.val() < now"
        }
      }
    },

    "products": {
      ".read": true,
      ".write": false,
      ".indexOn": ["priorty"],
      "$product_id": {
        ".read": true,
        ".write": "auth.isModerator === true"
      }
    },

    "images": {
      ".read": true,
      ".write": false,
      ".indexOn": ["rel"],
      "$product_id": {
        ".read": true,
        ".write": "auth.isModerator === true"
      }
    }

  }
}
